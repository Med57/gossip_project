<h1>Nouveau Gossip</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
    <%= form_for @gossip do |f| %>
      <div class="form-group">
      <label> Titre du gossip </label>
      <%= f.text_area :title %>
      </div>
      <div class="form-group">
      <label> Contenu du gossip </label>
      <%= f.text_area :content %>
      </div>
        <div class="form-group">
        <button type="submit" class="btn btn-primary"name="button">Ajout du Gossip</button>
        </div>
    </div>
    <% end %>
  </div>
</div>
