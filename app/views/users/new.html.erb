<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">

    <%= form_for @user do |f| %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label> Prenom </label>
          <%= f.text_field :first_name  %>
        </div>
        <div class="form-group col-md-6">
          <label> Nom </label>
          <%= f.text_field :last_name  %>
        </div>
        <div class="form-group col-md-6">
          <label> E-mail </label>
          <%= f.text_field :email  %>
        </div>
        <div class="form-group col-md-6">
          <label> Age </label>
          <%= f.text_field :age  %>
        </div>
        <div class="form-group col-md-6">
          <label> Mot de passe </label>
          <%= f.text_field :password  %>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary"name="button">Inscription</button>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
